@using NetB.Models.DTO
@using System.Collections.Generic
@model IEnumerable<TarefasDTO>
@{
    ViewBag.Title = "Index";
}
@if (Model.Count() <= 0)
{
    <h3>Pesquisa não retornou resultados</h3>
}
else
{
    <script type="text/javascript">

    </script>
    <h2>Bem Vindo ao NetB</h2>


    <table id="tabela" class="table table-striped table-bordered">
        <tr>
            <th>Tarefa</th>
            <th>Projeto</th>
            <th>Previsão</th>
            <th>Observações</th>
        </tr>
        <tbody>

            @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Tarefa</td>
                    <td>@item.Projeto</td>
                    <td>@item.Previsao.ToString()</td>
                    <td>@item.Observacoes</td>
                </tr>
            }

        </tbody>
    </table>
}

